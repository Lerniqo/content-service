{
  "name": "content-service",
  "version": "1.0.0",
  "description": "O/L Mathematics Platform - Content Service",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "lint": "eslint \"apps/**/*.ts\" --fix",
    "format": "prettier --write \"apps/**/*.ts\"",
    "build": "npm run build --workspace=lerniqo-content-service-content",
    "start": "npm run start --workspace=lerniqo-content-service-content",
    "start:dev": "npm run start:dev --workspace=lerniqo-content-service-content",
    "test": "npm run test --workspace=lerniqo-content-service-content"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/node": "^24.2.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.20.0"
  },
  "keywords": [
    "nestjs",
    "education",
    "mathematics",
    "content-service"
  ],
  "author": "Lerniqo",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  }
}
